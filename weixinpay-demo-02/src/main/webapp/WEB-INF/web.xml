
<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>helloapp</display-name>
    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>com.yundianba.weixinpay.servlet.BuyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>image</servlet-name>
        <servlet-class>com.yundianba.weixinpay.servlet.ImageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/payment/buy</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/payment/image</url-pattern>
    </servlet-mapping>




</web-app>
